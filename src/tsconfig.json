{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "noUnusedLocals": false, // was true
        "noUnusedParameters": false, // was true
        "noImplicitAny": false, // added - fix error TS7016: Could not find a declaration file for module ‘XYZ’. ‘file.js’ implicitly has an ‘any’ type
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "removeComments": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "outDir": "../build/",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "incremental": true,
        "allowJs": true
    },
    "references": [
        {
            "path": "../"
        }
    ]
}
